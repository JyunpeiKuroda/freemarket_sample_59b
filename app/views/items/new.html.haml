.items__new__background
  = render "shared/center_logo_header"
  .items__new__sell
    .items__new__sell__title
      .items__new__sell__title-text
        商品の情報を入力
    .items__new__sell__form
      = form_for "" do |f|
        .items__new__sell__form__upload-image
          = f.label :"出品画像"
          %span.items__new__sell__form__require
            必須
          %br
          %span.items__new__sell__form__upload-image-text
            最大10枚までアップロードできます
          %br
          .items__new__sell__form__upload-image-form
            -# Dropzonejs？でドラッグ&ドロップができるかもしれない。今は見た目だけ作ります。
            = f.file_field :image, multiple: true
            = f.label :image, class:"items__new__sell__form__upload-image-form" do
              ドラッグアンドドロップ
              %br
              またはクリックしてファイルをアップロード
          .items__new__sell__form__confirm-text
            画像がありません
        .items__new__sell__form__items
          .items__new__sell__form__items-name
            = f.label :"商品名"
            %span.items__new__sell__form__require
              必須
            %br
            = f.text_field :name, placeholder:"商品名（必須４０文字まで）"
          .items__new__sell__form__confirm-text
            入力してください
          .items__new__sell__form__items-explanation
            = f.label :"商品の説明"
            %span.items__new__sell__form__require
              必須
            %br
            = f.text_area :text, placeholder:"商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。"
          .items__new__sell__form__confirm-text
            入力してください
        .items__new__sell__form__item__detail
          .items__new__sell__form__item__detail-title
            商品の詳細
          .items__new__sell__form__item__detail-form
            .items__new__sell__form__item__detail-form__category
              = f.label :"カテゴリー"
              %span.items__new__sell__form__require
                必須
              %br
              = f.collection_select :category_parent, Category.where(ancestry: nil), :id, :name, include_blank: '---'
            .items__new__sell__form__confirm-text
              選択してください
            .items__new__sell__form__item__detail-form__status
              = f.label :"商品の状態"
              %span.items__new__sell__form__require
                必須
              %br
              -# あとでコレクションボックスになるかも
              = f.collection_select :status_id, Status.all, :id, :name, {prompt: "---"}
            .items__new__sell__form__confirm-text
              選択してください
        .items__new__sell__form__about-delivery
          .items__new__sell__form__about-delivery-title
            = "配送について"
            = link_to "#" do
              = fa_icon 'question-circle'
          .items__new__sell__form__about-delivery-form
            .items__new__sell__form__about-delivery-form__postage
              = f.label :"配送料の負担"
              %span.items__new__sell__form__require
                必須
              %br
              -# あとでコレクションボックスになるかも
              = f.collection_select :postage_id, Postage.all, :id, :name, {prompt: "---"}
            .items__new__sell__form__confirm-text
              選択してください
            .items__new__sell__form__about-delivery-form__post-area
              = f.label :"発送元の地域"
              %span.items__new__sell__form__require
                必須
              %br
              = f.collection_select :prefecture_id, Prefecture.all, :id, :name, {prompt: "---"}
            .items__new__sell__form__confirm-text
              選択してください
            .items__new__sell__form__about-delivery-form__arrival
              = f.label :"発送までの日数"
              %span.items__new__sell__form__require
                必須
              %br
              -# あとでコレクションボックスになるかも
              = f.collection_select :arrival_id, Arrival.all, :id, :name, {prompt: "---"}
            .items__new__sell__form__confirm-text
              選択してください
        .items__new__sell__form__price
          .items__new__sell__form__price-title
            = "販売価格(300〜9,999,999)"
            = link_to "#" do
              = fa_icon 'question-circle'
          .items__new__sell__form__price-form
            .items__new__sell__form__price-form-price
              = f.label :"価格"
              %span.items__new__sell__form__require
                必須
              %span.items__new__sell__form__price-mark
                ¥
              = f.text_field :price, placeholder:"例）300"
              .items__new__sell__form__confirm-text
                300以上9999999以下で入力してください
            .items__new__sell__form__price-form-commission
              .items__new__sell__form__price-form-commission-title
                販売手数料
              .items__new__sell__form__price-form-commission-price
                ー
            .items__new__sell__form__price-form-profit
              .items__new__sell__form__price-form-profit-title
                販売利益
              .items__new__sell__form__price-form-profit-price
                ー
        .items__new__sell__form__button
          .items__new__sell__form__button__confirmation
            =link_to "禁止されている出品", "#"
            、
            =link_to "行為","#"
            を必ずご確認ください。
            %br
            またブランド品でシリアルナンバー等がある場合はご記載ください。偽ブランドの販売は犯罪であり処罰される可能性があります。
            %br
            また、出品をもちまして
            =link_to "加盟店規約","#"
            に同意したことになります。
          .items__new__sell__form__button__sell-button
            = f.submit "出品する"
          .items__new__sell__form__button__back-button
            %input{type:"button", value:"もどる"}
  = render "shared/center_logo_footer"