.form
  = form_for @item do |f|
    = f.text_field :name
    = f.text_field :price
    = f.fields_for :images do |image|
      = image.file_field :image
    = f.submit "データベースへ"

.main-header
  = render "items/top-page-header"
.main-content
  = render "items/top-page-main-contents"
.top-page-shipping-button
  = render "items/shipping-button"
.main-footer
  = render "items/top-page-footer"
